
@model Human
<form asp-controller="Human" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>

    <span asp-validation-for="FirstName" class="text-danger"> </span><br>
    <label asp-for="FirstName"></label><br>
    <input asp-for="FirstName" type="text" /><br>

    <span asp-validation-for="LastName" class="text-danger"> </span><br>
    <label asp-for="LastName"></label><br>
    <input asp-for="LastName" type="text" /><br>

    <span asp-validation-for="Age" class="text-danger"> </span><br>
    <label asp-for="Age"></label><br>
    <input asp-for="Age" type="number" /><br>

    <span asp-validation-for="IsSick" class="text-danger"> </span><br>
    <label asp-for="IsSick"></label><br>
    <input asp-for="IsSick" type="checkbox" /><br>

    <span asp-validation-for="Gender" class="text-danger"> </span><br>
    <label asp-for="Gender"></label><br>
    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" type="text"></select><br>
    @*<input asp-for="Gender" type="text" />*@
    <br>

    <span asp-validation-for="CountryId" class="text-danger"></span>
    <label asp-for="CountryId">Country</label><br>
    <select asp-for="CountryId" asp-items="ViewBag.CountryList"></select><br>

    @*<input asp-for="CountryId" type="number" />*@
    <br>    
    <button type="submit">Create human</button>
</form>
