@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor

@model AccountLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@accessor.HttpContext.Request.Query["ReturnUrl"].ToString()" method="post">
    <div asp-validation-summary="All"> </div>

    <span asp-validation-for="Email"> </span><br>
    <label asp-for="Email"></label><br>
    <input asp-for="Email" type="text" /><br>

    <span asp-validation-for="Password"> </span><br>
    <label asp-for="Password"></label><br>
    <input asp-for="Password" type="password" /><br>

    <label asp-for="SaveSession"></label> <br>
    <input asp-for="SaveSession" type="checkbox" /><br>

    <br>

    <button type="submit">Login</button>
</form>